<h2 class="text-center text-white mt-5"><%= t ".signup" %></h2>

<div class="container col-md-6 mx-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%= f.label :name, class: "text-white" %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :email, class: "text-white" %>
    <%= f.email_field :email, class: "form-control" %>

    <%= f.label :password, class: "text-white" %>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.label :password_confirmation, t(".password_confirmation"), class: "text-white" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>

    <%= f.submit t(".create_account"), class: "btn btn-success" %>
  <% end %>
</div>
