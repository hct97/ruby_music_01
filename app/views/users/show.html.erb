<div class="row mt-3">
  <aside class="col-md-4">
    <section class="user_info">
      <h1 class="text-white">
        <%= gravatar_for current_user %>
        <%= current_user.name %>
      </h1>
    </section>
  </aside>
</div>
<div class="text-center text-white">
  <h4 class="font-italic">
    <%= t ".my_song" %>
  </h4>
</div>
<div class= "justify-content">
  <% if @songs %>
    <ul>
      <%= render @songs %>
    </ul>
    <%= paginate @songs, theme: "twitter-bootstrap-4" %>
  <% else %>
    <%= t ".not_found" %>
  <% end %>
</div>
